<%- include('partials/_head') -%>

<body>
<div class="tm-page-wrap mx-auto">
    <div class="position-relative">
        <%- include('partials/_nav') -%>
        <div class="tm-welcome-container tm-fixed-header tm-fixed-header-3">
            <div class="text-center">
                <p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 mt-lg-0 mt-5 text-white mx-auto">
                    Edit Post
                </p>
            </div>
        </div>

        <div id="tm-fixed-header-bg"></div>
    </div>
    <main>
        <div class="container-fluid px-0">
            <div class="mx-auto tm-content-container">
                <div class="mx-auto pb-3 tm-about-text-container px-3">
                    <div class="row">
                        <div class="col-lg-12 mb-5">
                            <form action="/edit/post/<%= photo._id %>?_method=PUT" method="POST" class="tm-contact-form" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input type="text" name="title" class="form-control rounded-0" value="<%= photo.title %>" placeholder="Title" required="" />
                                </div>
                                <div class="form-group">
                                    <textarea rows="8" name="description" class="form-control" placeholder="Description" required=""><%= photo.description %></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="file" class="form-control-file" name="image">
                                    <br>
                                    <label for="">Current Photo:</label> <br>
                                    <img src="<%= '/uploads/' + photo.image %>" height="90" alt="">
                                </div>

                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Edit</span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>

    <div class="container-fluid tm-content-container mx-auto pt-4">
        <%- include('partials/_footer') -%>
    </div>
</div>

<script src="js/jquery-3.4.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/parallax.min.js"></script>
</body>
</html>